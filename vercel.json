{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    }
  ]
}
